//-----------------------------------------------------------Class-----------------------------------------------------------------------------------------------------
class Fisherman
{
  int x; 
  int y;
  int speedX;
  PImage fisher;

Fisherman ( int x, int y)
{
  this.x = x;
  this.y = y;
  fisher = loadImage("fisherman.png");
}

//-----------------------------------------------------------Speed setup-----------------------------------------------------------------------------------------------
void move(int speedX)
{
  x = x + speedX;
}

//-----------------------------------------------------------Draws the image-------------------------------------------------------------------------------------------
void draw()
{
  image(fisher, x , y, 400,300);
}
}